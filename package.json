{
  "name": "tx-i18n",
  "version": "0.6.0-rc.1",
  "description": "Auto-translate for your application (TSX/React supported)",
  "author": "RubaXa <ibn@rubaxa.org>",
  "license": "MIT",
  "repository": "git@github.com:artifact-project/tx-i18n.git",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test-plugin": "ttsc",
    "ts-build": "tsc",
    "git-clean": "git clean -f",
    "prepublish": "npm run test && npm run ts-build",
    "postpublish": "npm run git-clean"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "src/*/*.js",
    "src/*/*.d.ts"
  ],
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/node": "^10.17.11",
    "@types/react": "^16.9.16",
    "@types/webpack": "^4.4.24",
    "awesome-typescript-loader": "^5.2.1",
    "jest": "^20.0.3",
    "react": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "ts-jest": "^20.0.4",
    "ts-node": "^8.5.4",
    "ttypescript": "^1.5.8",
    "typescript": "^3.7.3",
    "webpack": "^4.41.3"
  },
  "peerDependencies": {
    "react": ">=15.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.tests\\.ts$",
    "transformIgnorePatterns": [],
    "setupTestFrameworkScriptFile": "<rootDir>/__jest__/extensions.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
