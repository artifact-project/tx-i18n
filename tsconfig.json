{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
  },
  "typeRoots": [
    "node_modules/@types",
    "types"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "*.ts",
    "./src/"
  ]
}
